    author={Peng*, Yongqian and Ma*, Yuxi and Wang, Mengmeng and Wang, Yuxuan and Wang, Yizhou and Zhang, Chi and Zhu#, Yixin and Zheng#, Zilong},
    booktitle={CogSci},
    year={2025},
